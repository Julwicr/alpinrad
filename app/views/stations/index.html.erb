<h1>Stations#index</h1>

<% @stations.each do |station| %>
  <%= station.name %>
  <%= station.category %>
  <% unless station.station_schedules.empty? %>
      <% station.station_schedules.each do |schedule| %>
        <%= schedule.start_date %>
        <%= schedule.end_date %>
      <% end %>
  <% end %>
  <br>
<% end %>

<%= form_with model: @station do |form| %>
  <%= form.text_field :name %>
  <%= form.select :category, %w[dropoff pickup popup] %>
  <%= form.text_area :description, size: "60x10" %>
  <%= form.number_field :bike_capacity %>
  <%= form.submit %>
<% end %>
